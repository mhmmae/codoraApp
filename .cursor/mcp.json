{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "firebase-tools@latest", 
        "experimental:mcp", 
        "--dir", 
        "/Users/mostafaaltlal/StudioProjects/Codora copy 2"
      ],
      "env": {
        "FIREBASE_PROJECT_ID": "codora-app1",
        "NODE_ENV": "development"
      }
    },
    "framelink-figma": {
      "command": "npx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=YOUR_FIGMA_API_KEY_HERE",
        "--stdio"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "settings": {
    "autoReconnect": true,
    "timeout": 30000,
    "retryAttempts": 3
  }
}